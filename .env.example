# Airtrack Environment Variables
# Copy this file to .env and fill in your actual values

# Database Configuration
MYSQL_ROOT_PASSWORD=rootpassword123
MYSQL_DATABASE=airtrack_db
MYSQL_USER=airtrack
MYSQL_PASSWORD=airtrackpass123

# RabbitMQ Configuration
RABBITMQ_USER=airtrack
RABBITMQ_PASSWORD=airtrackrabbit123

# Spring Boot Configuration
SPRING_PROFILES_ACTIVE=docker
JWT_SECRET=airtrackverysecret-change-in-production

# Email Configuration
MAIL_HOST=smtp.gmail.com
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# Azure Storage Configuration
AZURE_STORAGE_ACCOUNT_NAME=your-storage-account
AZURE_STORAGE_ACCOUNT_KEY=your-storage-key

# Node.js Configuration
NODE_ENV=production
OPENAI_API_KEY=your-openai-key

# For Azure deployment - these will be set by Azure Container Apps
# AZURE_MYSQL_HOST=
# AZURE_MYSQL_DATABASE=
# AZURE_MYSQL_USERNAME=
# AZURE_MYSQL_PASSWORD=