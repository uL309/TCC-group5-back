# TrueNAS Scale Environment Variables for Airtrack
# Copy this file to .env.truenas and configure for your TrueNAS deployment

# TrueNAS Host Configuration
TRUENAS_HOST=truenas.local  # Change to your TrueNAS hostname or IP
SPRING_PROFILES_ACTIVE=truenas

# Database Configuration
MYSQL_ROOT_PASSWORD=AirTrack@TrueNAS2024!
MYSQL_DATABASE=airtrack_db
MYSQL_USER=airtrack
MYSQL_PASSWORD=AirTrack@DB2024!

# RabbitMQ Configuration
RABBITMQ_USER=airtrack
RABBITMQ_PASSWORD=AirTrack@MQ2024!

# JWT Security
JWT_SECRET=airtrack-truenas-jwt-secret-very-long-and-secure-key-2024

# Email Configuration (configure with your SMTP)
MAIL_HOST=smtp.gmail.com
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# Azure Storage (optional - for cloud storage integration)
AZURE_STORAGE_ACCOUNT_NAME=
AZURE_STORAGE_ACCOUNT_KEY=

# Node.js Configuration
NODE_ENV=production
OPENAI_API_KEY=sk-your-openai-key-here

# Backup Configuration
BACKUP_RETENTION_DAYS=30

# Performance Configuration
JAVA_OPTS=-XX:+UseContainerSupport -XX:MaxRAMPercentage=70.0 -XX:+UseG1GC -XX:+UseStringDeduplication

# TrueNAS Scale specific paths (adjust according to your pool name)
# Default assumes pool name is 'tank' - change if different
TRUENAS_APPS_PATH=/mnt/tank/apps/airtrack
TRUENAS_BACKUP_PATH=/mnt/tank/backups/airtrack

# Network Configuration
AIRTRACK_SUBNET=172.20.0.0/16

# Optional: Custom domain/SSL configuration
# CUSTOM_DOMAIN=airtrack.yourdomain.com
# SSL_ENABLED=false